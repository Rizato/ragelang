{
  "name": "ragelang",
  "version": "0.1.11",
  "description": "Ragelang interpreter - A rage-inducing programming language where unsupported characters fall",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "bundle": "esbuild src/index.ts --bundle --format=iife --global-name=RagelangLib --outfile=dist/ragelang.bundle.js",
    "bundle:minify": "esbuild src/index.ts --bundle --format=iife --global-name=RagelangLib --outfile=dist/ragelang.bundle.min.js --minify",
    "build:all": "npm run build && npm run bundle",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,js,json,md,html,css,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md,html,css,yaml,yml}\"",
    "clean": "rm -rf dist",
    "fledgling:dev": "npm run build && npm run bundle && cp dist/ragelang.bundle.js fledgling/assets/js/ && npx serve@latest fledgling -l 8080",
    "fledgling:build": "npm run build:all && cp dist/ragelang.bundle.js fledgling/assets/js/",
    "fledgling:serve": "npx serve@latest fledgling -l 8080",
    "fledgling:copy-bundle": "cp dist/ragelang.bundle.js fledgling/assets/js/",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css,yaml,yml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "ragelang",
    "interpreter",
    "language",
    "game",
    "langjam"
  ],
  "author": "Rizato",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.27.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "browser": "dist/ragelang.bundle.min.js",
  "dependencies": {
    "eslint": "^9.39.2"
  }
}
